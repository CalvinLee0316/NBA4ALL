<%- include('header'); -%>

  <div class="tables">
    <div class="row">
      <div class="col-lg-1">
        <h1 class = "arrow"> <a class = dateArrow href=<%=yday%>> < </a>
        </h1>
        <img src="" alt="">
      </div>
      <div class="col-lg-8">
        <h1 class="displayDate">
          <%=today.substring(4,6) +'/'+ today.substring(6) +'/'+   today.substring(0,4)%>
          
        </h1>
      </div>
      <div class="col-lg-1">
        <h1 class = "arrow"> <a class = dateArrow href=<%=tomo%>> > </a> </h1>
      </div>
    </div>
    <div class="row">
      <h6><a href="/index/scores">Go to Today</a></h6>
    </div>
  </div>

  <div class="scores">
    <% games.forEach(game=>{%>
      <!-- Create whatever game blocks using data from games -->
      <div class = dummy></div>
      <div class="table" onclick = "location.href='<%=game.dateGameId%>';">
        <div class="row">
          <div class="col-lg-1">
            <h1 class = 'score'>
              <%=game.HomeScore%>
            </h1>
            <img src="" alt="">
          </div>
          <div class="col-lg-8">
            <h1 class = 'status'>
              <%=game.status%>
            </h1>
          </div>
          <div class="col-lg-1">
            <h1 class = 'score'>
              <%=game.AwayScore%>
            </h1>
          </div>

        </div>

        <div class="row">
          <div class="col-lg-1">
            <img src=<%=game.HomeLogo%> alt="" width = "100" height = "100">
          </div>
          <div class="col-lg-8" style=" text-align: center;">
            <h2 class = 'time'>
              <%=game.clock%> <%=game.period%>
            </h2>
          </div>
          <div class="col-lg-1">
            <img src=<%=game.AwayLogo%> alt="" nwidth = "100" height = "100">
          </div>

        </div>

        <div class="row">
          <div class="col-lg-1">
            <p>
              <%=game.Home%>
            </p>
          </div>
          <div class="col-lg-8">
            <a href=<%=game.dateGameId%>>Boxscore</a>
          </div>
          <div class="col-lg-1">
            <p>
              <%=game.Away%>
            </p>
          </div>

        </div>

      </div>
      <div class = dummy></div>
      <%})%>
  </div>

  <%- include('footer'); -%>